{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "transpileOnly": true
    }
}
